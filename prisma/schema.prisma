generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  clerkId   String   @unique
  createdAt DateTime @default(now())
  firstName String?
  imageUrl  String?
  lastName  String?
  role      UserRole @default(USER)
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}
